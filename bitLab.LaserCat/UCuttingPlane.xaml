<UserControl x:Class="bitLab.LaserCat.UCuttingPlane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
	<Border BorderThickness="2" BorderBrush="Black" Height="{Binding MaxY}" Width="{Binding MaxX}" >
		<Canvas Height="{Binding MaxY}" Width="{Binding MaxX}" >
		<!--<Canvas Height="200" Width="200" >-->
			<ItemsControl ItemsSource="{Binding PlannedLines}"/>
			<ItemsControl ItemsSource="{Binding DrawnLines}"/>
			<Ellipse Canvas.Left="{Binding CurrX}" Canvas.Top="{Binding CurrX}" Height="5" Width="5" Stroke="Green" />
			<!--<Line Stroke="Green" StrokeThickness="5" X1="{Binding CurrX}" X2="{Binding CurrX}" Y1="{Binding CurrY}" Y2="{Binding CurrY}"/>-->
		</Canvas>
	</Border>
</UserControl>
